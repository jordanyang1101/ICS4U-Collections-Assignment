class Candidate {
    private String name;
    private int numVotes;

    public Candidate(String name) {
        this.name = name;
        this.numVotes = 0;
    }

    public String getName() {
        return name;
    }

    public int getVotes() {
        return numVotes;
    }

    public void addVotes() {
        numVotes++;
    }

    public String toString() {
        return name + ": " + numVotes + " votes";
    }
}
